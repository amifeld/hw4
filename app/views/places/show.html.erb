<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <h2>My Entries</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @entries.each do |entry| %>
      <div class="col">
        <div class="card h-100">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="card-text"><small class="text-muted"><%= entry["occurred_on"] %></small></p>
          <div class="card-body">
          <% if entry.uploaded_image.attached? %>
            <%= image_tag entry.uploaded_image, class: "card-img-top img-fluid" %>
          <% else %>
            <%= image_tag "data:image/jpeg;base64,", class: "card-img-top img-fluid" %>
          <% end %>
          

            <p class="card-text"><%= entry["description"] %></p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
<p>   </p>
  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </p>
  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
<% end %>
