<% if @current_user %>
  <h1>New Place</h1>

  <form action="/places" method="post">
    <input type="hidden" name="user_id" value="<%= params["user_id"] %>">
    <p>
      <label for="name_input">Name</label>
      <input type="text" name="name" id="name_input">
    </p>

    <button>Save</button>
  </form>
<% else %>
  You must first <%= link_to 'login', login_path %> to post.
<% end %>
